<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link rel="stylesheet" href="styles.css">
  <title>Disease Predictor</title>
</head>
<body>
  <div class="container">
    <h1>Disease Prediction System</h1>
    <form action="/predict" method="POST">
      <label for="symptoms">Enter symptoms (comma-separated):</label>
      <input type="text" name="symptoms" id="symptoms" placeholder="e.g. headache, fatigue, cough" required>
      <button type="submit">Predict</button>
    </form>

    <% if (locals.predicted_disease) { %>
      <div class="section">
        <h2>Predicted Disease:</h2>
        <p><strong><%= predicted_disease %></strong></p>
      </div>

      <div class="section">
        <h3>Description:</h3>
        <p><%= dis_des %></p>
      </div>

      <div class="section">
        <h3>Precautions:</h3>
        <ul>
          <% my_precautions.forEach(p => { %>
            <li><%= p %></li>
          <% }); %>
        </ul>
      </div>

      <div class="section">
        <h3>Medications:</h3>
        <ul>
          <% medications.forEach(med => { %>
            <li><%= med %></li>
          <% }); %>
        </ul>
      </div>

      <div class="section">
        <h3>Recommended Diet:</h3>
        <ul>
          <% my_diet.forEach(diet => { %>
            <li><%= diet %></li>
          <% }); %>
        </ul>
      </div>

      <div class="section">
        <h3>Workout Suggestions:</h3>
        <ul>
          <% workout.forEach(wrk => { %>
            <li><%= wrk %></li>
          <% }); %>
        </ul>
      </div>

    <% } else if (locals.message) { %>
      <div class="message"><%= message %></div>
    <% } %>
  </div>
</body>
</html>
